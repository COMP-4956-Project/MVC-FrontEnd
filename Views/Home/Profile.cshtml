<div class="profile-box">
    <div class="text-center mt-5">
        <img src="~/images/CodeCraft_logo_Option1.png" alt="Logo" width="350" height="50" class="mb-4" />
        <h1>@ViewData["Title"] - User Profile</h1>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="profile-details text-center mt-3">
                    <img src="~/images/user_profile_pic.jpg" alt="Profile Picture" width="150" height="150" class="rounded-circle mb-3" />
                    <h3>@Model.Name</h3>
                    <p><strong>Game Progress:</strong> @Model.GameProgress%</p>
                    <a asp-area="" asp-controller="" asp-action="EditProfile" class="btn btn-primary mt-3">Edit Profile</a>
                </div>

                <!-- User details edit form -->
                <div class="edit-profile-form mt-5">
                    <form asp-action="UpdateProfile">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="@Model.Name">
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Enter address" value="@Model.Address">
                        </div>
                        <button type="submit" class="btn btn-success">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
